   "source": [
    "import numpy as np\n",
    "\n",
    "def bce_loss(y, ycap):\n",
    "  ycap = np.clip(ycap,1e-7 ,1-1e-7)\n",
    "  return -np.mean(y * np.log(ycap) + (1- y)*np.log(1-ycap))\n",
    "\n",
    "y_true = np.array([0, 1, 1, 0])\n",
    "y_pred = np.array([0.1, 0.9, 0.8, 0.2])\n",
    "print(\"BCE Loss:\", bce_loss(y_true, y_pred))"
   ]
  }
